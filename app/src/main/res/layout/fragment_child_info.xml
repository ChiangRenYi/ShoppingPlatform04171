<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efedf2"
    android:clickable="true"
    android:weightSum="1">

    <ScrollView
        android:id="@+id/child_info_scroll_layout"
        android:layout_height="457dp"
        android:layout_width="match_parent"
        android:scrollbars="horizontal|vertical"
        android:scrollbarStyle="outsideOverlay"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.98">

        <RelativeLayout
            android:id="@+id/layout_child_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:id="@+id/layout_child_info_photo"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:srcCompat="@drawable/me"
                    android:id="@+id/imageView4"
                    android:padding="@dimen/_10sdp"
                    android:fadeScrollbars="true"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layout_child_info_photo">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style">

                    <TextView
                        android:text="名稱"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_username"
                        android:layout_margin="@dimen/_6sdp"
                        android:textColor="#000000"
                        android:layout_weight="1"/>

                    <EditText
                        android:hint="請輸入名稱"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_childname"
                        android:layout_margin="@dimen/_6sdp"
                        android:selectAllOnFocus="true"
                        android:textColorHint="#c9c9c9"
                        android:textColor="#000000"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="right"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:id="@+id/imageButton_username"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="#ffffff"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style">

                    <TextView
                        android:text="性別"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_en_username"
                        android:layout_margin="@dimen/_6sdp"
                        android:textColor="#000000"
                        android:gravity="left|right"
                        android:layout_weight="1"/>

                    <EditText
                        android:hint="請輸入性別"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_en_username"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:selectAllOnFocus="true"
                        android:textColorHint="#c9c9c9"
                        android:textColor="#000000"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:gravity="right" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:id="@+id/imageButton_en_username"
                        android:background="#ffffff"
                        android:layout_margin="@dimen/_2sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style">

                    <TextView
                        android:text="身份證字號"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_ID"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_6sdp"
                        android:textColor="#000000"/>

                    <EditText
                        android:hint="請輸入身份證字號"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_ID"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:textColorHint="#c9c9c9"
                        android:textColor="#000000"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:gravity="right"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_margin="@dimen/_2sdp"
                        android:id="@+id/imageButton_ID" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style">

                    <TextView
                        android:text="出生日期"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_birthday"
                        android:layout_margin="@dimen/_6sdp"
                        android:textColor="#000000"
                        android:gravity="left|right"
                        android:layout_weight="1"/>

                    <EditText
                        android:hint="請輸入出生年月日"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_birthday"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:textColorHint="#c9c9c9"
                        android:textColor="#000000"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:gravity="right"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:id="@+id/imageButton_birthday"
                        android:background="#ffffff"
                        android:layout_margin="@dimen/_2sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style">

                    <TextView
                        android:text="備註"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_gender"
                        android:layout_margin="@dimen/_6sdp"
                        android:textColor="#000000"
                        android:gravity="left|right"
                        android:layout_weight="1"/>

                    <EditText
                        android:hint="請輸入備註"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_gender"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:textColorHint="#c9c9c9"
                        android:textColor="#000000"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:gravity="right"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:id="@+id/imageButton_gender"
                        android:background="#ffffff"
                        android:layout_margin="@dimen/_2sdp"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:text="確認"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51cdf0"
        android:id="@+id/Button_child_confirm" />

</LinearLayout>