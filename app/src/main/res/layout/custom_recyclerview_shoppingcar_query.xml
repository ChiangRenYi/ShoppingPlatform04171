<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:orientation="horizontal"
    android:id="@+id/ll_sp"
    android:weightSum="10">


    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:checked="false"
        android:gravity="center"
        style="@style/CustomCheckboxTheme" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_weight="5.3">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">

            <TextView
                android:id="@+id/goodsName"
                android:layout_width="0dp"
                android:layout_weight="5.3"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:text="商品我我我我我我我"
                android:layout_gravity="center"
                android:textColor="@android:color/black" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:text="庫存量："
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/shoppingcar_warehouse"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:text="10"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_7sdp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/shoppingcar_minus"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="0.8"
        android:background="@drawable/shoppingcar_minus"
        android:layout_gravity="center"
        android:scaleY="0.2"
        android:scaleX="0.5"
        android:gravity="center"/>
    <TextView
        android:id="@+id/goodsNumber"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="0.8"
        android:text="數量"
        android:textSize="@dimen/_11sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/shoppingcar_plus"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="0.8"
        android:background="@drawable/shoppingcart_plus"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleY="0.4"
        android:scaleX="0.5"
        android:textColor="@android:color/black"/>



    <TextView
        android:id="@+id/goodsPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="1.5"
        android:textSize="@dimen/_11sdp"
        android:text="200000"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"/>

</LinearLayout>